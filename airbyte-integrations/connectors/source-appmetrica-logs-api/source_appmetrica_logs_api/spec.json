{
  "documentationUrl" : "https://docsurl.com",
  "connectionSpecification" : {
    "$schema" : "http://json-schema.org/draft-07/schema#",
    "title" : "Appmetrica Spec",
    "type" : "object",
    "required" : [
      "credentials",
      "application_id",
      "sources",
      "date_range"
    ],
    "additionalProperties" : false,
    "properties" : {
      "credentials" : {
        "title" : "Authorization Method",
        "default" : {},
        "order" : 0,
        "type" : "object",
        "oneOf" : [
          {
            "title" : "Access Token Auth",
            "type" : "object",
            "properties" : {
              "auth_type" : {
                "title" : "Auth Type",
                "const" : "access_token_auth",
                "order" : 0,
                "type" : "string"
              },
              "access_token" : {
                "title" : "Access Token",
                "description" : "Long-term Authorized Access Token.",
                "airbyte_secret" : true,
                "type" : "string"
              }
            },
            "required" : [
              "access_token"
            ]
          },
          {
            "title" : "CredentialsCraft Auth",
            "type" : "object",
            "properties" : {
              "auth_type" : {
                "title" : "Auth Type",
                "const" : "credentials_craft_auth",
                "order" : 0,
                "type" : "string"
              },
              "credentials_craft_host" : {
                "title" : "CredentialsCraft Host",
                "description" : "CredentialsCraft Host.",
                "examples" : [
                  "https://credentialscraft.mysite.com"
                ],
                "type" : "string"
              },
              "credentials_craft_token" : {
                "title" : "CredentialsCraft Token",
                "description" : "Long-term CredentialsCraft Access Token (NOT Yandex token).",
                "type" : "string",
                "airbyte_secret" : true
              },
              "credentials_craft_token_id" : {
                "title" : "CredentialsCraft Yandex Token ID",
                "desctiption" : "Yandex Token ID in CredentialsCraft",
                "examples" : [
                  3345435
                ],
                "type" : "integer"
              }
            },
            "required" : [
              "auth_type",
              "credentials_craft_host",
              "credentials_craft_token",
              "credentials_craft_token_id"
            ]
          }
        ]
      },
      "application_id" : {
        "type" : "integer",
        "title" : "Application ID",
        "description" : "Appmetrica application identifier",
        "order" : 1
      },
      "date_range" : {
        "title" : "Date Range",
        "description" : "Choose date period that must be loaded",
        "type" : "object",
        "order" : 2,
        "oneOf" : [
          {
            "type" : "object",
            "title" : "Custom Date Range",
            "required" : [
              "date_from",
              "date_to",
              "date_range_type"
            ],
            "properties" : {
              "date_from" : {
                "title" : "Start Date",
                "type" : "string",
                "description" : "Start date in format YYYY-MM-DD.",
                "pattern" : "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "pattern_descriptor" : "YYYY-MM-DD",
                "examples" : [
                  "2023-01-01"
                ],
                "format" : "date",
                "order" : 0
              },
              "date_to" : {
                "title" : "End Date",
                "type" : "string",
                "description" : "End date in format YYYY-MM-DD.",
                "pattern" : "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "examples" : [
                  "2023-01-30"
                ],
                "pattern_descriptor" : "YYYY-MM-DD",
                "format" : "date",
                "order" : 1
              },
              "date_range_type" : {
                "type" : "string",
                "title" : "Date Range Type",
                "description" : "Custom Date",
                "const" : "custom_date",
                "order" : 2
              }
            }
          },
          {
            "type" : "object",
            "title" : "Last N Days",
            "required" : [
              "last_days_count",
              "should_load_today",
              "date_range_type"
            ],
            "properties" : {
              "last_days_count" : {
                "title" : "Last Days Count",
                "type" : "integer",
                "description" : "Count of last days exclude today.",
                "minimum" : 0,
                "maximum" : 3650,
                "examples" : [
                  30
                ],
                "order" : 0
              },
              "should_load_today" : {
                "title" : "Load Today?",
                "type" : "boolean",
                "description" : "Should connector load today time as End Time? If not, End Time will be yesterday.",
                "order" : 1,
                "default" : false
              },
              "date_range_type" : {
                "type" : "string",
                "title" : "Date Range Type",
                "description" : "Last N Days",
                "const" : "last_n_days",
                "order" : 2
              }
            }
          },
          {
            "type" : "object",
            "title" : "From Start Date To Today",
            "description" : "Load data from Start Date to Today. Only with this option you can use incremental sync.",
            "required" : [
              "date_from",
              "should_load_today",
              "date_range_type"
            ],
            "properties" : {
              "date_from" : {
                "title" : "Start Date",
                "type" : "string",
                "description" : "Start date in format YYYY-MM-DD.",
                "pattern" : "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "pattern_descriptor" : "YYYY-MM-DD",
                "examples" : [
                  "2023-01-01"
                ],
                "format" : "date",
                "order" : 0
              },
              "should_load_today" : {
                "title" : "Load Today?",
                "type" : "boolean",
                "description" : "Should connector load today date as End Date? If not, End Date will be yesterday.",
                "order" : 1,
                "default" : false
              },
              "date_range_type" : {
                "type" : "string",
                "title" : "Date Range Type",
                "description" : "From start date to today",
                "const" : "from_start_date_to_today",
                "order" : 2
              }
            }
          }
        ]
      },
      "sources" : {
        "title" : "Sources",
        "order" : 2,
        "description" : "Sources of data",
        "type" : "array",
        "items" : {
          "type" : "object",
          "required" : [
            "source_name",
            "fields"
          ],
          "properties" : {
            "source_name" : {
              "title" : "Source name",
              "order" : 0,
              "enum" : [
                "clicks",
                "installations",
                "postbacks",
                "events",
                "profiles",
                "revenue_events",
                "deeplinks",
                "push_tokens",
                "crashes",
                "errors",
                "sessions_starts",
                "ecommerce_events"
              ]
            },
            "fields" : {
              "title" : "Fields List",
              "order" : 1,
              "description" : "List of report fields. Leave empty for all available source fields. Available fields list: https://appmetrica.yandex.ru/docs/mobile-api/logs/endpoints.html",
              "type" : "array",
              "examples" : [
                [
                  "device_manufacturer",
                  "city",
                  "application_id"
                ]
              ],
              "items" : {
                "type" : "string"
              }
            },
            "filters" : {
              "title" : "Filters",
              "order" : 3,
              "description" : "Filters by the value of any of the available fields available for source. Only the equality operation is supported.",
              "type" : "array",
              "items" : {
                "title" : "Filter",
                "type" : "object",
                "properties" : {
                  "name" : {
                    "type" : "string",
                    "title" : "Field Name"
                  },
                  "value" : {
                    "type" : "string",
                    "title" : "="
                  }
                },
                "required" : [
                  "name",
                  "value"
                ]
              }
            },
            "date_dimension" : {
              "title" : "Date Dimension",
              "order" : 4,
              "description" : "The parameter determines which event the date is considered relative to: default - relative to the moment when the event occurred on the user's device; receive - relative to the moment when the event information was received by the server.",
              "type" : "string",
              "enum" : [
                "default",
                "receive"
              ],
              "default" : "default"
            },
            "check_fields" : {
              "title" : "Validate Fields",
              "description" : "Validate fields list",
              "type" : "boolean",
              "default" : true,
              "order" : 5
            }
          }
        }
      },
      "chunked_logs" : {
        "title" : "Split Logs Into Chunks",
        "order" : 9,
        "description" : "Connector can split data replication into several logs instead of only one. You can choice days count on every chunk.",
        "type" : "object",
        "oneOf" : [
          {
            "title" : "Don't Split",
            "type" : "object",
            "properties" : {
              "split_mode_type" : {
                "const" : "do_not_split_mode",
                "order" : 0,
                "type" : "string"
              }
            },
            "required" : [
              "split_mode_type"
            ]
          },
          {
            "title" : "Split Logs",
            "type" : "object",
            "properties" : {
              "split_mode_type" : {
                "const" : "split_date_mode",
                "order" : 0,
                "type" : "string"
              },
              "split_range_days_count" : {
                "title" : "Split Range Days Count",
                "description" : "E.g. if you choose 30 days, whole logs will be split into several reports by every month (30 days). It can increase replication time, so don't set too small range. Minimum - 1",
                "minimum" : 1,
                "maximum" : 3650,
                "type" : "integer",
                "default" : "30",
                "order" : 1
              }
            },
            "required" : [
              "split_mode_type",
              "split_range_days_count"
            ]
          }
        ]
      }
    }
  }
}
