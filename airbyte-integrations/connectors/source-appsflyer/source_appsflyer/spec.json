{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Appsflyer Spec",
    "type": "object",
    "required": [
      "app_id",
      "access_token",
      "date_range"
    ],
    "additionalProperties": false,
    "properties": {
      "app_id": {
        "order": 0,
        "type": "string",
        "description": "App identifier as found in AppsFlyer."
      },
      "access_token": {
        "order": 1,
        "type": "string",
        "description": "Pull API token for authentication V2.",
        "airbyte_secret": true
      },
      "date_range": {
        "title": "Date Range",
        "description": "Choose date period that must be loaded",
        "type": "object",
        "order": 2,
        "oneOf": [
          {
            "type": "object",
            "title": "Custom Date Range",
            "required": [
              "date_from",
              "date_to",
              "date_range_type"
            ],
            "properties": {
              "date_from": {
                "title": "Start Date",
                "type": "string",
                "description": "Start date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "pattern_descriptor": "YYYY-MM-DD",
                "examples": [
                  "2023-01-01"
                ],
                "format": "date",
                "order": 0
              },
              "date_to": {
                "title": "End Date",
                "type": "string",
                "description": "End date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "examples": [
                  "2023-01-30"
                ],
                "pattern_descriptor": "YYYY-MM-DD",
                "format": "date",
                "order": 1
              },
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "Custom Date",
                "const": "custom_date",
                "order": 2
              }
            }
          },
          {
            "type": "object",
            "title": "Last N Days",
            "required": [
              "last_days_count",
              "should_load_today",
              "date_range_type"
            ],
            "properties": {
              "last_days_count": {
                "title": "Last Days Count",
                "type": "integer",
                "description": "Count of last days exclude today.",
                "minimum": 0,
                "maximum": 3650,
                "examples": [
                  30
                ],
                "order": 0
              },
              "should_load_today": {
                "title": "Load Today?",
                "type": "boolean",
                "description": "Should connector load today time as End Time? If not, End Time will be yesterday.",
                "order": 1,
                "default": false
              },
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "Last N Days",
                "const": "last_n_days",
                "order": 2
              }
            }
          },
          {
            "type": "object",
            "title": "From Start Date To Today",
            "description": "Load data from Start Date to Today. Only with this option you can use incremental sync.",
            "required": [
              "date_from",
              "should_load_today",
              "date_range_type"
            ],
            "properties": {
              "date_from": {
                "title": "Start Date",
                "type": "string",
                "description": "Start date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "pattern_descriptor": "YYYY-MM-DD",
                "examples": [
                  "2023-01-01"
                ],
                "format": "date",
                "order": 0
              },
              "should_load_today": {
                "title": "Load Today?",
                "type": "boolean",
                "description": "Should connector load today date as End Date? If not, End Date will be yesterday.",
                "order": 1,
                "default": false
              },
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "From start date to today",
                "const": "from_start_date_to_today",
                "order": 2
              }
            }
          }
        ]
      },
      "chunked_reports_config": {
        "title": "Split Download Into Chunks",
        "description": "Connector can split data replication into several logs instead of only one. You can choice days count on every chunk.",
        "default": {},
        "type": "object",
        "order": 3,
        "oneOf": [
          {
            "title": "Don't Split",
            "type": "object",
            "properties": {
              "split_mode_type": {
                "const": "do_not_split_mode",
                "order": 0,
                "type": "string"
              }
            },
            "required": [
              "split_mode_type"
            ]
          },
          {
            "title": "Split Logs",
            "type": "object",
            "properties": {
              "split_mode_type": {
                "const": "split_date_mode",
                "order": 0,
                "type": "string"
              },
              "unit": {
                "type": "string",
                "title": "Unit",
                "order": 1,
                "enum": [
                  "Hours",
                  "Days"
                ],
                "default": "Hours"
              },
              "split_range_units_count": {
                "title": "Unit Count",
                "description": "E.g. if you choose 4 hours, whole logs will be split into several reports by every 4 hours (6 parts for every day). It can increase replication time, so don't set too small range. Minimum - 1",
                "minimum": 1,
                "maximum": 3650,
                "type": "integer",
                "default": 4,
                "order": 1
              }
            },
            "required": [
              "split_mode_type",
              "unit",
              "split_range_units_count"
            ]
          }
        ]
      },
      "media_source_filter_config": {
        "title": "Media Source Filter",
        "description": "Use to filter by a specific media source. Applied for InAppEvents and Installs streams.",
        "default": "no_filter",
        "type": "object",
        "order": 4,
        "oneOf": [
          {
            "title": "Facebook",
            "type": "object",
            "properties": {
              "media_source_type": {
                "const": "facebook",
                "order": 0,
                "type": "string"
              }
            },
            "required": [
              "media_source_type"
            ]
          },
          {
            "title": "Twitter",
            "type": "object",
            "properties": {
              "media_source_type": {
                "const": "twitter",
                "order": 0,
                "type": "string"
              }
            },
            "required": [
              "media_source_type"
            ]
          },
          {
            "title": "Other",
            "type": "object",
            "properties": {
              "media_source_type": {
                "const": "other",
                "order": 0,
                "type": "string"
              },
              "custom_media_source_name": {
                "order": 1,
                "type": "string",
                "title": "Media Source Name"
              }
            },
            "required": [
              "media_source_type",
              "custom_media_source_name"
            ]
          },
          {
            "title": "No Filter",
            "type": "object",
            "properties": {
              "media_source_type": {
                "const": "no_filter",
                "order": 0,
                "type": "string"
              }
            },
            "required": [
              "media_source_type"
            ]
          }
        ]
      },
      "timezone": {
        "order": 5,
        "type": "string",
        "description": "Time zone in which date times are stored. The project timezone may be found in the App settings in the AppsFlyer console.",
        "default": "UTC",
        "examples": [
          "US/Pacific",
          "UTC"
        ]
      },
      "in_app_events_event_name_filter": {
        "order": 6,
        "type": "string",
        "title": "In-App Events Filter",
        "description": "Filter in-app events by specified events. Select multiple events by using a comma-separated list.",
        "examples": [
          "af_purchase,ftd"
        ],
        "pattern": "^$|^[0-9a-zA-Z_]+(,[0-9a-zA-Z_]+)*$"
      }
    }
  }
}