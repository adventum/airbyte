{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Bitrix24 Crm Spec",
    "type": "object",
    "required": [
      "webhook_endpoint",
      "date_range"
    ],
    "additionalProperties": false,
    "properties": {
      "webhook_endpoint": {
        "order": 0,
        "title": "Webhook Endpoint URL",
        "type": "string",
        "description": "Webhook Endpoint URL"
      },
      "entity_type_id": {
        "order": 1,
        "title": "Идентификатор типа объекта",
        "description": "Поле обязательно, если использовать стрим StageHistory. По умолчанию идет лид",
        "enum": ["лид", "сделка", "отчет"],
        "type": "string",
        "always_show": true
      },
      "date_range": {
        "order": 2,
        "title": "Временной диапазон",
        "description": "Выберите даты, за которые нужно получить данные",
        "type": "object",
        "oneOf": [
          {
            "type": "object",
            "title": "Кастомный диапазон",
            "required": [
              "date_from",
              "date_to",
              "date_range_type"
            ],
            "properties": {
              "date_from": {
                "title": "Дата начала",
                "type": "string",
                "description": "Start date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "pattern_descriptor": "YYYY-MM-DD",
                "examples": [
                  "2023-01-01"
                ],
                "format": "date",
                "order": 0
              },
              "date_to": {
                "title": "Дата конца",
                "type": "string",
                "description": "End date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "examples": [
                  "2023-01-30"
                ],
                "pattern_descriptor": "YYYY-MM-DD",
                "format": "date",
                "order": 1
              },
              "date_range_type": {
                "type": "string",
                "const": "custom_date",
                "order": 2
              }
            }
          },
          {
            "type": "object",
            "title": "Последние N дней",
            "required": [
              "last_days_count",
              "should_load_today",
              "date_range_type"
            ],
            "properties": {
              "last_days_count": {
                "title": "Число дней",
                "type": "integer",
                "description": "Число дней, не считая сегодня",
                "minimum": 0,
                "maximum": 3650,
                "examples": [
                  30
                ],
                "order": 0
              },
              "should_load_today": {
                "title": "Загружать сегодня?",
                "type": "boolean",
                "description": "Нужно ли загружать сегодняшние данные? Если нет, загрузка остановится на вчерашних",
                "order": 1,
                "default": false
              },
              "date_range_type": {
                "type": "string",
                "const": "last_n_days",
                "order": 2
              }
            }
          },
          {
            "type": "object",
            "title": "От указанной даты до сегодня",
            "description": "Загружать данные от даты начала по сегодня не включительно",
            "required": [
              "date_from",
              "should_load_today",
              "date_range_type"
            ],
            "properties": {
              "date_from": {
                "title": "Start Date",
                "type": "string",
                "description": "Start date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "pattern_descriptor": "YYYY-MM-DD",
                "examples": [
                  "2023-01-01"
                ],
                "format": "date",
                "order": 0
              },
              "should_load_today": {
                "title": "Загружать сегодня?",
                "type": "boolean",
                "description": "Нужно ли загружать сегодняшние данные? Если нет, загрузка остановится на вчерашних",
                "order": 1,
                "default": false
              },
              "date_range_type": {
                "type": "string",
                "const": "from_start_date_to_today",
                "order": 2
              }
            }
          }
        ]
      }
    }
  }
}