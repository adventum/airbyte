{
  "documentationUrl" : "https://docs.airbyte.com/integrations/sources/sape",
  "connectionSpecification" : {
    "$schema" : "http://json-schema.org/draft-07/schema#",
    "title" : "1C Spec",
    "type" : "object",
    "required" : [
      "credentials",
      "date_range"
    ],
    "additionalProperties" : false,
    "properties" : {
      "credentials" : {
        "title" : "Метод авторизации",
        "order" : 0,
        "type" : "object",
        "oneOf" : [
          {
            "title" : "Авторизация по логину и токену",
            "type" : "object",
            "properties" : {
              "auth_type" : {
                "title" : "Тип авторизации",
                "const" : "token",
                "order" : 0,
                "type" : "string"
              },
              "login" : {
                "order" : 1,
                "title" : "Логин Sape",
                "type" : "string"
              },
              "token" : {
                "airbyte_secret" : true,
                "description" : "Токен - не пароль. Токен состоит из 64 символов и может быть получен по этому адресу: https://passport.sape.ru/security/token/",
                "order" : 2,
                "title" : "Токен Sape",
                "type" : "string"
              }
            },
            "required" : [
              "auth_type",
              "login",
              "token"
            ]
          },
          {
            "title" : "CredentialsCraft",
            "type" : "object",
            "properties" : {
              "auth_type" : {
                "title" : "Тип авторизации",
                "const" : "credentials_craft_auth",
                "order" : 0,
                "type" : "string"
              },
              "credentials_craft_host" : {
                "title" : "CredentialsCraft Host",
                "description" : "CredentialsCraft Host.",
                "examples" : [
                  "https://credentialscraft.mysite.com"
                ],
                "type" : "string"
              },
              "credentials_craft_token" : {
                "title" : "Токен CredentialsCraft",
                "description" : "(Пока не поддерживается) Долгосрочный токен доступа к CredentialsCraft (Не токен Sape)",
                "type" : "string",
                "airbyte_secret" : true
              },
              "credentials_craft_token_id" : {
                "title" : "ID токена Sape в CredentialsCraft",
                "examples" : [
                  123
                ],
                "type" : "integer"
              }
            },
            "required" : [
              "auth_type",
              "credentials_craft_host",
              "credentials_craft_token",
              "credentials_craft_token_id"
            ]
          }
        ]
      },
      "date_range": {
        "title": "Временной диапазон",
        "description": "Выберите даты, за которые нужно получить данные",
        "type": "object",
        "order": 4,
        "oneOf": [
          {
            "type": "object",
            "title": "Кастомный диапазон",
            "required": [
              "date_from",
              "date_to",
              "date_range_type"
            ],
            "properties": {
              "date_from": {
                "title": "Дата начала",
                "type": "string",
                "description": "Start date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "pattern_descriptor": "YYYY-MM-DD",
                "examples": [
                  "2023-01-01"
                ],
                "format": "date",
                "order": 0
              },
              "date_to": {
                "title": "Дата конца",
                "type": "string",
                "description": "End date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "examples": [
                  "2023-01-30"
                ],
                "pattern_descriptor": "YYYY-MM-DD",
                "format": "date",
                "order": 1
              },
              "date_range_type": {
                "type": "string",
                "const": "custom_date",
                "order": 2
              }
            }
          },
          {
            "type": "object",
            "title": "Последние N дней",
            "required": [
              "last_days_count",
              "should_load_today",
              "date_range_type"
            ],
            "properties": {
              "last_days_count": {
                "title": "Число дней",
                "type": "integer",
                "description": "Число дней, не считая сегодня",
                "minimum": 0,
                "maximum": 3650,
                "examples": [
                  30
                ],
                "order": 0
              },
              "should_load_today": {
                "title": "Загружать сегодня?",
                "type": "boolean",
                "description": "Нужно ли загружать сегодняшние данные? Если нет, загрузка остановится на вчерашних",
                "order": 1,
                "default": false
              },
              "date_range_type": {
                "type": "string",
                "const": "last_n_days",
                "order": 2
              }
            }
          },
          {
            "type": "object",
            "title": "От указанной даты до сегодня",
            "description": "Загружать данные от даты начала по сегодня не включительно",
            "required": [
              "date_from",
              "should_load_today",
              "date_range_type"
            ],
            "properties": {
              "date_from": {
                "title": "Start Date",
                "type": "string",
                "description": "Start date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "pattern_descriptor": "YYYY-MM-DD",
                "examples": [
                  "2023-01-01"
                ],
                "format": "date",
                "order": 0
              },
              "should_load_today": {
                "title": "Загружать сегодня?",
                "type": "boolean",
                "description": "Нужно ли загружать сегодняшние данные? Если нет, загрузка остановится на вчерашних",
                "order": 1,
                "default": false
              },
              "date_range_type": {
                "type": "string",
                "const": "from_start_date_to_today",
                "order": 2
              }
            }
          }
        ]
      }
    }
  }
}
