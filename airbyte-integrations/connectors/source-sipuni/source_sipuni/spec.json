{
  "documentationUrl" : "https://docs.airbyte.com/integrations/sources/adjust",
  "connectionSpecification" : {
    "$schema" : "http://json-schema.org/draft-07/schema#",
    "title" : "Sipuni Spec",
    "type" : "object",
    "required" : [
      "credentials",
      "user",
      "date_range"
    ],
    "additionalProperties" : false,
    "properties" : {
      "credentials" : {
        "title" : "Authorization Method",
        "order" : 0,
        "type" : "object",
        "oneOf" : [
          {
            "title" : "Авторизация по токену",
            "type" : "object",
            "properties" : {
              "auth_type" : {
                "title" : "Тип авторизации",
                "const" : "access_token_auth",
                "order" : 0,
                "type" : "string"
              },
              "access_token" : {
                "airbyte_secret" : true,
                "description" : "Токен (секретный ключ) Sipuni",
                "order" : 0,
                "title" : "Токен",
                "type" : "string"
              }
            },
            "required" : [
              "auth_type",
              "access_token"
            ]
          },
          {
            "title" : "CredentialsCraft",
            "type" : "object",
            "properties" : {
              "auth_type" : {
                "title" : "Тип авторизации",
                "const" : "credentials_craft_auth",
                "order" : 0,
                "type" : "string"
              },
              "credentials_craft_host" : {
                "title" : "CredentialsCraft Host",
                "description" : "CredentialsCraft Host.",
                "examples" : [
                  "https://credentialscraft.mysite.com"
                ],
                "type" : "string"
              },
              "credentials_craft_token" : {
                "title" : "CredentialsCraft Token",
                "description" : "Long-term CredentialsCraft Access Token (NOT Adjust token).",
                "type" : "string",
                "airbyte_secret" : true
              },
              "credentials_craft_token_id" : {
                "title" : "CredentialsCraft Adjust Token ID",
                "desctiption" : "Adjust Token ID in CredentialsCraft",
                "examples" : [
                  123
                ],
                "type" : "integer"
              }
            },
            "required" : [
              "auth_type",
              "credentials_craft_host",
              "credentials_craft_token",
              "credentials_craft_token_id"
            ]
          }
        ]
      },
      "user" : {
        "order" : 1,
        "title" : "Номер пользователя",
        "description" : "Номер в системе ",
        "type" : "string",
        "examples": ["012345"]
      },
      "type" : {
        "order" : 2,
        "title" : "Тип звонка",
        "type" : "string",
        "enum": ["Все звонки", "Входящие", "Исходящие", "Внутренние"],
        "default": "Все звонки"
      },
      "state" : {
        "order" : 3,
        "title" : "Статус звонка",
        "type" : "string",
        "enum": ["Все звонки", "Пропущенные", "Принятые"],
        "default": "Все звонки"
      },
      "tree": {
        "order": 4,
        "type": "string",
        "examples": ["000691234", "000-421234", "000-424321"]
      },
      "show_tree_id": {
        "order": 5,
        "type": "boolean",
        "title": "Отображать ID схемы",
        "default": false
      },
      "from_number": {
        "order": 6,
        "type": "string",
        "title": "Номер, откуда",
        "examples": ["7916123456", "101", "1027"]
      },
      "to_number": {
        "order": 7,
        "type": "string",
        "title": "Номер, куда",
        "examples": ["7916123456", "101", "1027"]
      },
      "show_numbers_ringed": {
        "order": 8,
        "type": "boolean",
        "title": "Отображать номер, кому звонили"
      },
      "show_numbers_involved": {
        "order": 9,
        "type": "boolean",
        "title": "Отображать номер, кто разговаривал"
      },
      "show_names": {
        "order": 10,
        "type": "boolean",
        "title": "Отображать имена сотрудников"
      },
      "show_outgoing_line": {
        "order": 11,
        "type": "boolean",
        "title": "Отображать исходящую линию"
      },
      "to_answer": {
        "order": 12,
        "type": "string",
        "title": "Номер, кто ответил",
        "examples": ["7916123456", "101", "1027"]
      },
      "anonymous": {
        "order": 13,
        "type": "boolean",
        "title": "Отображать анонимные звонки",
        "default": false
      },
      "first_time": {
        "order": 14,
        "type": "boolean",
        "title": "Только новые клиенты",
        "default": false
      },
      "show_dtmf_user_answers": {
        "order": 15,
        "type": "boolean",
        "title": "Отображать набор dtmf",
        "default": false
      },
      "date_range": {
        "title": "Временной диапазон",
        "description": "Выберите даты, за которые нужно получить данные",
        "type": "object",
        "order": 16,
        "oneOf": [
          {
            "type": "object",
            "title": "Кастомный диапазон",
            "required": [
              "date_from",
              "date_to",
              "date_range_type"
            ],
            "properties": {
              "date_from": {
                "title": "Дата начала",
                "type": "string",
                "description": "Start date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "pattern_descriptor": "YYYY-MM-DD",
                "examples": [
                  "2023-01-01"
                ],
                "format": "date",
                "order": 0
              },
              "date_to": {
                "title": "Дата конца",
                "type": "string",
                "description": "End date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "examples": [
                  "2023-01-30"
                ],
                "pattern_descriptor": "YYYY-MM-DD",
                "format": "date",
                "order": 1
              },
              "date_range_type": {
                "type": "string",
                "const": "custom_date",
                "order": 2
              }
            }
          },
          {
            "type": "object",
            "title": "Последние N дней",
            "required": [
              "last_days_count",
              "should_load_today",
              "date_range_type"
            ],
            "properties": {
              "last_days_count": {
                "title": "Число дней",
                "type": "integer",
                "description": "Число дней, не считая сегодня",
                "minimum": 0,
                "maximum": 3650,
                "examples": [
                  30
                ],
                "order": 0
              },
              "should_load_today": {
                "title": "Загружать сегодня?",
                "type": "boolean",
                "description": "Нужно ли загружать сегодняшние данные? Если нет, загрузка остановится на вчерашних",
                "order": 1,
                "default": false
              },
              "date_range_type": {
                "type": "string",
                "const": "last_n_days",
                "order": 2
              }
            }
          },
          {
            "type": "object",
            "title": "От указанной даты до сегодня",
            "description": "Загружать данные от даты начала по сегодня не включительно",
            "required": [
              "date_from",
              "should_load_today",
              "date_range_type"
            ],
            "properties": {
              "date_from": {
                "title": "Start Date",
                "type": "string",
                "description": "Start date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "pattern_descriptor": "YYYY-MM-DD",
                "examples": [
                  "2023-01-01"
                ],
                "format": "date",
                "order": 0
              },
              "should_load_today": {
                "title": "Загружать сегодня?",
                "type": "boolean",
                "description": "Нужно ли загружать сегодняшние данные? Если нет, загрузка остановится на вчерашних",
                "order": 1,
                "default": false
              },
              "date_range_type": {
                "type": "string",
                "const": "from_start_date_to_today",
                "order": 2
              }
            }
          }
        ]
      }
    }
  }
}
