{
  "documentationUrl" : "https://docs.airbyte.io/connector-development",
  "connectionSpecification" : {
    "$schema" : "http://json-schema.org/draft-07/schema#",
    "title" : "UIS Spec",
    "type" : "object",
    "required" : [

    ],
    "additionalProperties" : false,
    "properties" : {
      "credentials" : {
        "title" : "Метод авторизации",
        "order" : 0,
        "type" : "object",
        "group" : "auth",
        "oneOf" : [
          {
            "title" : "Access Token",
            "type" : "object",
            "properties" : {
              "auth_type" : {
                "title" : "Auth Type",
                "const" : "access_token_auth",
                "order" : 0,
                "type" : "string"
              },
              "access_token" : {
                "title" : "Access Token",
                "description" : "Long-term Authorized Access Token.",
                "airbyte_secret" : true,
                "type" : "string"
              }
            },
            "required" : [
              "access_token"
            ]
          },
          {
            "title" : "CredentialsCraft",
            "type" : "object",
            "properties" : {
              "auth_type" : {
                "title" : "Auth Type",
                "const" : "credentials_craft_auth",
                "order" : 0,
                "type" : "string"
              },
              "credentials_craft_host" : {
                "title" : "CredentialsCraft Host",
                "description" : "По какому адресу находится сервис CredentialsCraft?",
                "examples" : [
                  "https://credentialscraft.mysite.com"
                ],
                "type" : "string"
              },
              "credentials_craft_token" : {
                "title" : "CredentialsCraft Token",
                "description" : "Токен CredentialsCraft (НЕ токен UIS).",
                "type" : "string",
                "airbyte_secret" : true
              },
              "credentials_craft_token_id" : {
                "title" : "ID авторизации в CredentialsCraft",
                "desctiption" : "ID авторизации UIS внутри CredentialsCraft",
                "examples" : [
                  3345435
                ],
                "type" : "integer"
              }
            },
            "required" : [
              "auth_type",
              "credentials_craft_host",
              "credentials_craft_token",
              "credentials_craft_token_id"
            ]
          }
        ]
      },
      "date_range" : {
        "title" : "Временной диапазон",
        "description" : "Выберите даты, за которые нужно получить данные",
        "type" : "object",
        "order" : 1,
        "oneOf" : [
          {
            "type" : "object",
            "title" : "Кастомный диапазон",
            "required" : [
              "date_from",
              "date_to",
              "date_range_type"
            ],
            "properties" : {
              "date_from" : {
                "title" : "Дата начала",
                "type" : "string",
                "description" : "Start date in format YYYY-MM-DD.",
                "pattern" : "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "pattern_descriptor" : "YYYY-MM-DD",
                "examples" : [
                  "2023-01-01"
                ],
                "format" : "date",
                "order" : 0
              },
              "date_to" : {
                "title" : "Дата конца",
                "type" : "string",
                "description" : "End date in format YYYY-MM-DD.",
                "pattern" : "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "examples" : [
                  "2023-01-30"
                ],
                "pattern_descriptor" : "YYYY-MM-DD",
                "format" : "date",
                "order" : 1
              },
              "date_range_type" : {
                "type" : "string",
                "const" : "custom_date",
                "order" : 2
              }
            }
          },
          {
            "type" : "object",
            "title" : "Последние N дней",
            "required" : [
              "last_days_count",
              "should_load_today",
              "date_range_type"
            ],
            "properties" : {
              "last_days_count" : {
                "title" : "Число дней",
                "type" : "integer",
                "description" : "Число дней, не считая сегодня",
                "minimum" : 0,
                "maximum" : 3650,
                "examples" : [
                  30
                ],
                "order" : 0
              },
              "should_load_today" : {
                "title" : "Загружать сегодня?",
                "type" : "boolean",
                "description" : "Нужно ли загружать сегодняшние данные? Если нет, загрузка остановится на вчерашних",
                "order" : 1,
                "default" : false
              },
              "date_range_type" : {
                "type" : "string",
                "const" : "last_n_days",
                "order" : 2
              }
            }
          },
          {
            "type" : "object",
            "title" : "От указанной даты до сегодня",
            "description" : "Загружать данные от даты начала по сегодня не включительно",
            "required" : [
              "date_from",
              "should_load_today",
              "date_range_type"
            ],
            "properties" : {
              "date_from" : {
                "title" : "Start Date",
                "type" : "string",
                "description" : "Start date in format YYYY-MM-DD.",
                "pattern" : "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "pattern_descriptor" : "YYYY-MM-DD",
                "examples" : [
                  "2023-01-01"
                ],
                "format" : "date",
                "order" : 0
              },
              "should_load_today" : {
                "title" : "Загружать сегодня?",
                "type" : "boolean",
                "description" : "Нужно ли загружать сегодняшние данные? Если нет, загрузка остановится на вчерашних",
                "order" : 1,
                "default" : false
              },
              "date_range_type" : {
                "type" : "string",
                "const" : "from_start_date_to_today",
                "order" : 2
              }
            }
          }
        ]
      },
      "communication_streams": {
        "title" : "Стрим Communication",
        "description": "Стрим get.communications (отличается от get.communications_report)",
        "type" : "array",
        "order" : 2,
        "always_show" : true,
        "group" : "streams_config",
        "items" : {
          "type" : "object",
          "additionalProperties" : false,
          "required" : [
            "fields",
            "report_id"
          ],
          "properties" : {
            "report_id" : {
              "type" : "integer",
              "title" : "ID отчета",
              "always_show" : true,
              "description": "В системе UIS есть разные отчеты, например: Обращения, Лиды, Посещения. В это поле нужно ввести ID нужного вам отчета",
              "order" : 0
            },
            "fields" : {
              "title" : "Поля данных",
              "description" : "Укажите список полей, требуемые к выгрузке, в соответствии с типом (например: communication, leads ...) отчета. Примеры полей: site_domain_name, site_name ...",
              "default" : [],
              "type" : "array",
              "always_show" : true,
              "items" : {
                "type" : "string"
              },
              "order" : 1
            }
          }
        }
      }
    }
  }
}
