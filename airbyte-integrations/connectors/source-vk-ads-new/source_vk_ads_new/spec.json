{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Vk Ads New Spec",
    "type": "object",
    "required": ["credentials", "date_range"],
    "additionalProperties": false,
    "properties": {
      "credentials": {
        "title": "Authorization Method",
        "order": 0,
        "type": "object",
        "oneOf": [
          {
            "title": "Access Token Authorization",
            "type": "object",
            "properties": {
              "auth_type": {
                "title": "Auth Type",
                "const": "access_token_auth",
                "order": 0,
                "type": "string"
              },
              "access_token": {
                "title": "Access Token",
                "description": "Client ID",
                "type": "string",
                "airbyte_secret": true
              }
            },
            "required": ["auth_type", "access_token"]
          },
          {
            "title": "CredentialsCraft Auth",
            "type": "object",
            "properties": {
              "auth_type": {
                "title": "Auth Type",
                "const": "credentials_craft_auth",
                "order": 0,
                "type": "string"
              },
              "credentials_craft_host": {
                "title": "CredentialsCraft Host",
                "description": "CredentialsCraft Host.",
                "examples": ["https://credentialscraft.mysite.com"],
                "type": "string"
              },
              "credentials_craft_token": {
                "title": "CredentialsCraft Token",
                "description": "Long-term CredentialsCraft Access Token (NOT VK Ads token).",
                "type": "string",
                "airbyte_secret": true
              },
              "credentials_craft_token_id": {
                "title": "CredentialsCraft VK Ads Token ID",
                "desctiption": "VK Ads Token ID in CredentialsCraft",
                "examples": [3345435],
                "type": "integer"
              }
            },
            "required": [
              "auth_type",
              "credentials_craft_host",
              "credentials_craft_token",
              "credentials_craft_token_id"
            ]
          }
        ]
      },
      "date_range": {
        "title": "Date Range",
        "description": "Choose date period that must be loaded",
        "type": "object",
        "order": 3,
        "oneOf": [
          {
            "type": "object",
            "title": "Custom Date Range",
            "required": ["date_from", "date_to", "date_range_type"],
            "properties": {
              "date_from": {
                "title": "Start Date",
                "type": "string",
                "description": "Start date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "examples": ["2023-01-01"],
                "order": 0
              },
              "date_to": {
                "title": "End Date",
                "type": "string",
                "description": "End date in format YYYY-MM-DD.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "examples": ["2023-01-30"],
                "order": 1
              },
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "Custom Date",
                "const": "custom_date",
                "order": 2
              }
            }
          },
          {
            "type": "object",
            "title": "Last N Days",
            "required": [
              "last_days_count",
              "should_load_today",
              "date_range_type"
            ],
            "properties": {
              "last_days_count": {
                "title": "Last Days Count",
                "type": "integer",
                "description": "Count of last days exclude today.",
                "minimum": 0,
                "maximum": 3650,
                "examples": [30],
                "order": 0
              },
              "should_load_today": {
                "title": "Load Today?",
                "type": "boolean",
                "description": "Should connector load today time as End Time? If not, End Time will be yesterday.",
                "order": 1,
                "default": false
              },
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "Last N Days",
                "const": "last_n_days",
                "order": 1
              }
            }
          }
        ]
      }
    }
  }
}
