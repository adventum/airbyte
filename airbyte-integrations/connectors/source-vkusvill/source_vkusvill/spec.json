{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Yandex Direct Spec",
    "type": "object",
    "required": [
      "url_base",
      "credentials"
    ],
    "additionalProperties": false,
    "properties": {
      "url_base": {
        "title": "API URL",
        "order": 0,
        "type": "string",
        "default": "https://vkusvill-back.fraxis.ru"
      },
      "credentials": {
        "title": "Метод авторизации",
        "order": 0,
        "type": "object",
        "group": "auth",
        "oneOf": [
          {
            "title": "По паролю",
            "type": "object",
            "properties": {
              "auth_type": {
                "title": "Auth Type",
                "const": "password_auth",
                "order": 0,
                "type": "string"
              },
              "username": {
                "title": "Логин",
                "description": "Имя пользователя",
                "type": "string"
              },
              "password": {
                "title": "Пароль",
                "description": "Пароль",
                "airbyte_secret": true,
                "type": "string"
              }
            },
            "required": [
              "username",
              "password"
            ]
          },
          {
            "title": "CredentialsCraft",
            "type": "object",
            "properties": {
              "auth_type": {
                "title": "Auth Type",
                "const": "credentials_craft_auth",
                "order": 0,
                "type": "string"
              },
              "credentials_craft_host": {
                "title": "CredentialsCraft Host",
                "description": "По какому адресу находится сервис CredentialsCraft?",
                "examples": [
                  "https://credentialscraft.mysite.com",
                  "http://localhost:8000",
                  "http://100.100.0.123:8000"
                ],
                "type": "string"
              },
              "credentials_craft_token": {
                "title": "CredentialsCraft Token",
                "description": "Сервисный токен к CredentialsCraft (НЕ токен Вкусвилл)",
                "type": "string",
                "airbyte_secret": true
              },
              "credentials_craft_token_id": {
                "title": "ID авторизации в CredentialsCraft",
                "desctiption": "ID авторизации Вкусвилл внутри CredentialsCraft",
                "examples": [
                  3345435
                ],
                "type": "integer"
              }
            },
            "required": [
              "auth_type",
              "credentials_craft_host",
              "credentials_craft_token",
              "credentials_craft_token_id"
            ]
          }
        ]
      },
      "date_range": {
        "title": "Период отчётов",
        "type": "object",
        "group": "date_range",
        "order": 3,
        "oneOf": [
          {
            "type": "object",
            "title": "Последние несколько дней",
            "required": [
              "last_days_count"
            ],
            "properties": {
              "date_range_type": {
                "type": "string",
                "const": "last_days",
                "order": 0
              },
              "last_days_count": {
                "title": "Количество дней",
                "description": "Количество дней",
                "examples": [
                  6,
                  30
                ],
                "type": "integer",
                "order": 1,
                "minimum": 0,
                "maximum": 3650
              },
              "load_today": {
                "title": "Загружать сегодняшний день",
                "description": "Если выключено, концом периода будет вчерашний день",
                "type": "boolean",
                "always_show": true,
                "order": 2,
                "default": false
              }
            }
          },
          {
            "type": "object",
            "title": "Инкрементальная выгрузка",
            "required": [],
            "properties": {
              "date_range_type": {
                "type": "string",
                "const": "incremental_sync",
                "order": 0
              },
              "date_from": {
                "title": "Начало выгрузки",
                "description": "Начало выгрузки в формате YYYY-MM-DD",
                "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}$",
                "pattern_descriptor": "YYYY-MM-DD",
                "examples": [
                  "2023-05-01"
                ],
                "order": 1,
                "type": "string"
              }
            }
          }
        ]
      }
    }
  }
}