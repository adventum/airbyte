{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Yandex Direct Spec",
    "type": "object",
    "required": ["credentials", "fields"],
    "additionalProperties": false,
    "properties": {
      "credentials": {
        "title": "Authorization Method",
        "order": 0,
        "type": "object",
        "oneOf": [
          {
            "title": "Access Token Auth",
            "type": "object",
            "properties": {
              "auth_type": {
                "title": "Auth Type",
                "const": "access_token_auth",
                "order": 0,
                "type": "string"
              },
              "access_token": {
                "title": "Access Token",
                "description": "Long-term Authorized Access Token.",
                "airbyte_secret": true,
                "type": "string"
              }
            },
            "required": ["access_token"]
          },
          {
            "title": "CredentialsCraft Auth",
            "type": "object",
            "properties": {
              "auth_type": {
                "title": "Auth Type",
                "const": "credentials_craft_auth",
                "order": 0,
                "type": "string"
              },
              "credentials_craft_host": {
                "title": "CredentialsCraft Host",
                "description": "CredentialsCraft Host.",
                "examples": ["https://credentialscraft.mysite.com"],
                "type": "string"
              },
              "credentials_craft_token": {
                "title": "CredentialsCraft Token",
                "description": "Long-term CredentialsCraft Access Token (NOT Yandex token).",
                "type": "string",
                "airbyte_secret": true
              },
              "credentials_craft_token_id": {
                "title": "CredentialsCraft Yandex Token ID",
                "desctiption": "Yandex Token ID in CredentialsCraft",
                "examples": [3345435],
                "type": "integer"
              }
            },
            "required": [
              "auth_type",
              "credentials_craft_host",
              "credentials_craft_token",
              "credentials_craft_token_id"
            ]
          }
        ]
      },
      "client_login": {
        "type": "string",
        "title": "Client Login",
        "description": "Yandex Direct Client Login",
        "order": 1
      },
      "date_range": {
        "title": "Date Range",
        "description": "Choose date period that must be loaded",
        "type": "object",
        "order": 2,
        "oneOf": [
          {
            "type": "object",
            "title": "Today",
            "required": ["date_range_type"],
            "properties": {
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "Today",
                "const": "today"
              }
            }
          },
          {
            "type": "object",
            "title": "Yesterday",
            "required": ["date_range_type"],
            "properties": {
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "Yesterday",
                "const": "yesterday",
                "order": 0
              }
            }
          },
          {
            "type": "object",
            "title": "Custom Date Range",
            "required": ["date_from", "date_to", "date_range_type"],
            "properties": {
              "date_from": {
                "title": "Start Date",
                "type": "string",
                "description": "Start date in format YYYY-MM-DD. If not set, last 30 days or last_days setting will be used.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "examples": ["2021-12-01"],
                "order": 0
              },
              "date_to": {
                "title": "End Date",
                "type": "string",
                "description": "End date in format YYYY-MM-DD. If not set, last 30 days or last_days setting will be used.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "examples": ["2021-12-30"],
                "order": 1
              },
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "Custom Date",
                "const": "custom_date",
                "order": 2
              }
            }
          },
          {
            "type": "object",
            "title": "From Start Date To Today",
            "required": ["date_from", "should_load_today", "date_range_type"],
            "properties": {
              "date_from": {
                "title": "Start Date",
                "type": "string",
                "description": "Start date in format YYYY-MM-DD. If not set, last 30 days or last_days setting will be used.",
                "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "examples": ["2021-12-01"],
                "order": 0
              },
              "should_load_today": {
                "title": "Load Today?",
                "type": "boolean",
                "description": "Should connector load today date as End Date? If not, End Date will be yesterday.",
                "default": false,
                "order": 1
              },
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "Custom Date",
                "const": "from_start_date_to_today",
                "order": 2
              }
            }
          },
          {
            "type": "object",
            "title": "Last N Days",
            "required": ["last_days_count", "date_range_type"],
            "properties": {
              "last_days_count": {
                "title": "Last Days Count",
                "type": "integer",
                "description": "Count of last days exclude today.",
                "minimum": 0,
                "maximum": 3650,
                "examples": [30],
                "order": 0
              },
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "Last N Days",
                "const": "last_n_days",
                "order": 1
              }
            }
          },
          {
            "type": "object",
            "title": "All Time",
            "required": ["date_range_type"],
            "properties": {
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "All Time",
                "const": "all_time",
                "order": 0
              }
            }
          },
          {
            "type": "object",
            "title": "Auto",
            "required": ["date_range_type"],
            "properties": {
              "date_range_type": {
                "type": "string",
                "title": "Date Range Type",
                "description": "Auto",
                "const": "auto",
                "order": 0
              }
            }
          }
        ]
      },
      "chunk_reports": {
        "title": "Split Report Into Chunks",
        "description": "Due to Yandex Direct Reports API 1 000 000 records limitation for 1 report, connector can split data replication into several reports instead of only one. You can choice date period for every chunk (Year, Month, Day).",
        "default": {},
        "type": "object",
        "order": 3,
        "oneOf": [
          {
            "title": "Don't Split",
            "type": "object",
            "properties": {
              "split_mode_type": {
                "const": "do_not_split_mode",
                "order": 0,
                "type": "string"
              }
            },
            "required": ["split_mode_type"]
          },
          {
            "title": "Split Reports",
            "type": "object",
            "properties": {
              "split_mode_type": {
                "const": "split_date_mode",
                "order": 0,
                "type": "string"
              },
              "split_range_days_count": {
                "title": "Split Range Days Count",
                "description": "E.g. if you choose 30 days, whole report will be split into several reports by every month (30 days). It can increase replication time, so don't set too small range. Minimum - 1",
                "minimum": 1,
                "maximum": 3650,
                "type": "integer",
                "default": "30",
                "order": 1
              }
            },
            "required": ["split_mode_type", "split_range_days_count"]
          }
        ]
      },
      "fields": {
        "title": "Fields",
        "description": "A list of chosen field names",
        "default": [],
        "type": "array",
        "items": {
          "type": "string"
        },
        "order": 4
      },
      "filters_json": {
        "title": "Filters Json",
        "description": "JSON array of Filter objects [{\"Field\": \"Year\", \"Operator\": \"EQUALS\", \"Values\": [\"2021\"]}, {...}, {...} ...]. Check https://yandex.ru/dev/direct/doc/reports/filters.html",
        "type": "string",
        "order": 5
      },
      "client_name": {
        "title": "Client Name Constant",
        "description": "Constant that will be used in record __clientName property",
        "type": "string",
        "examples": ["abcd"],
        "order": 6
      },
      "product_name": {
        "title": "Product Name Constant",
        "description": "Constant that will be used in record __productName property",
        "type": "string",
        "examples": ["abcd"],
        "order": 7
      },
      "custom_json": {
        "title": "Custom JSON",
        "description": "Custom JSON for additional record properties. Must be string of JSON object with first-level properties",
        "type": "string",
        "examples": ["{\"abc\": \"123\", \"cde\": \"132\"}"],
        "order": 8
      }
    }
  }
}
